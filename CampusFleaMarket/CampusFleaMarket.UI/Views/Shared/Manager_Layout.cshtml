<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>后台管理系统</title>
    @Styles.Render("~/Content/BootStrapCss")
    @Scripts.Render("~/Content/BootStrapJs")
    @RenderSection("styles",required:false)

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">后台管理</a>
            </div>
            <div>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-user"></span>【Admin】
                            <b class="caret"></b>   <!--下拉小图标-->
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">联系开发人员</a></li>
                            <li class="divider"></li>
                            <li><a href="#">注销</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid center">
        <div class="row">
            <div class="cfm-toolBar col-md-12">
                <nav class="navbar  navbar-default" role="navigation">
                    <div class="container-fluid">
                        <form class="navbar-form navbar-right" action="" method="post" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="输入关键字">
                            </div>
                            <button type="submit" class="btn btn-default">搜索</button>
                        </form>
                    </div>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <h3>全部管理</h3>
                <ul class="cfm-list">
                    <li>
                        <h5>用户管理</h5>
                        <ul class="cfm-num2List">
                            <li>@Html.ActionLink("注册用户","index","UserManager")</li>
                            <li><a href="#">注册用户消息</a></li>
                            <li><a href="#">用户评论</a></li>
                            <li><a href="#">用户购买记录</a></li>
                        </ul>
                    </li>

                    <li>
                        <h5>二手物品管理</h5>
                        <ul class="cfm-num2List">
                            <li>@Html.ActionLink("二手物品","index","goodManager")</li>
                            <li><a href="#">二手物品评论</a></li>
                            <li><a href="#">二手物品类别</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
            <!--tab内容开始-->
            <div class="col-md-10">
                <div id="cfm-Content">
                    <!--变化点-->
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")


    <script>
        $(document).ready(function () {

           
            //        实现左边列表选中状态
                $(".cfm-num2List li").click(function () {
                    $(".cfm-num2List li").css("background-color", "#f4f4f4");
                    $(this).css("background-color", "#FCFCFC")

                })

            @RenderSection("scripts", required: false)
        })
    </script>


</body>
</html>